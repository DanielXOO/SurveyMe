{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Serilog": {
    "FileLogging": {
      "PathFormat": "Logs/log-{Date}.log"
    }
  },

  "IdentityServer": {
    "ClientId": "client",
    "ClientSecret": "client_secret",
    "Scope": "openid SurveyMeApi offline_access"
  },
  
  "AllowedHosts": "*",
  "ApiConfiguration": {
    "BaseAddress" : "https://localhost:5001/api"
  }
}
